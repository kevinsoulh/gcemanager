# Calendar Configuration
APP_USE_MOCK_CALENDAR=true                   # Set to true for mock mode, false for real Google Calendar
APP_CALENDAR_ID=primary                      # Calendar ID to use (default: primary)
APP_CREDENTIALS_PATH=./credentials/service-account.json  # Path to Google service account JSON
APP_IMPERSONATION_EMAIL=                     # Email for domain-wide delegation (optional)

# Google Cloud / Firebase Configuration
APP_PROJECT_ID=your-project-id               # Your GCP/Firebase project ID
APP_SERVICE_ACCOUNT=./credentials/your-service-account@your-project-id.iam.gserviceaccount.com

# Development Environment
NODE_ENV=development                         # development or production

# Emulator Configuration
FIRESTORE_EMULATOR_HOST=localhost:8081       # Uncomment to use Firestore emulator
FUNCTIONS_EMULATOR=true                      # Uncomment to use Functions emulator locally
USE_LOCAL_FUNCTIONS=true                     # Use local functions instead of deployed ones

# Calendar Service Account Required Fields in JSON file:
# - client_email
# - private_key
# - private_key_id (optional)
# - project_id
